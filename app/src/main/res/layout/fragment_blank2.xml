<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmentOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BlankFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_1"
            android:contentDescription="@string/side_dish1"/>

        <TextView
            android:id="@+id/tv01"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:text="@string/_side_dish1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <Button
                android:id="@+id/btnDecrease1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/minus_sign"
                android:textSize="24sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/amount1"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnIncrease1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/plus_sign"
                android:textSize="24sp"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_2"
            android:contentDescription="@string/side_dish2"/>

        <TextView
            android:id="@+id/tv02"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:text="@string/_side_dish2"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btnDecrease2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/minus_sign"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/amount2"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnIncrease2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/plus_sign"
                android:textSize="24sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_3"
            android:contentDescription="@string/side_dish3"/>

        <TextView
            android:id="@+id/tv03"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:text="@string/_side_dish3"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btnDecrease3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/minus_sign"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/amount3"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnIncrease3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/plus_sign"
                android:textSize="24sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/side_dish4"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_4"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv04"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:text="@string/_side_dish4"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:focusable="true"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btnDecrease4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/minus_sign"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/amount4"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnIncrease4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/plus_sign"
                android:textSize="24sp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>